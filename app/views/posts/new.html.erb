<h1>New Post</h1>

<%= form_for @post do |f| %>
    <%= f.label :title, "Title:" %><br>
    <%= f.text_field :title %><br><br>
    <%= f.label :content, "Content:"%><br>
    <%= f.text_area :content %><br><br>
    <%= f.label :category_ids, "Categories:" %><br>
    <%= f.collection_check_boxes :category_ids, Category.all, :id, :name, include_blank: 'Any' %><br><br>
    <%= f.label :categories, "And/Or Enter New Category:" %><br>
    <%= f.fields_for :categories, @post.categories.build do |categories_fields| %>
        <%= categories_fields.text_field :name %>
    <% end %><br><br>
    <%= f.submit %>
<% end %>